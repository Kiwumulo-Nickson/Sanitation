doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.6.3/css/all.css')
  link(rel='stylesheet' href='https://bootswatch.com/4/journal/bootstrap.min.css')
  title StayClean Customer Requests
.container
  .row.mt-5
    .col-md-6.m-auto
      .card.card-body
        h1.text-center.mb-3
          i.fas.fa-user-plus
          |  Customer Requests
        form#form(action='#' onSubmit='return validate()'  method='POST')
          .form-group
            label(for='name')  Name
            input#username.form-control(type='name' name='name' placeholder='Enter Name')
            #nameErr.error
          .form-group
            label(for='text') Location
            input#ha.form-control(type='text' name='location' placeholder='Location')
            #haErr.error
          .form-group
            label(for='Service Requested') Service Requested
            input#service_requested.form-control(type='service_requested' name='service_requested' placeholder=' service requested')
            #actErr.error
          .form-group
            label(for='no_trucks') Number of Trucks 
            input#no_trucks.form-control(type='no_trucks' name='no_trucks' placeholder='Number of Trucks ')
            #actErr.error
          .form-group
            label(for='nin') NIN
            input#nin.form-control(type='nin' name='nin' placeholder='Enter nin')
            #actErr.error
          .form-group
            label(for='text') Request Duration
            input#rd.form-control(type='text' name='request_duration' placeholder='Request Duration')
            #actErr.error
          .form-group
            label(for='type_of_request') Type of Request
            input#type_of_request.form-control(type='type_of_request' name='type_of_request' placeholder=' type_of_request')
            #actErr.error
          .form-group
            label(for='Contact')  Contact 
            input#Contact.form-control(type='Contact' name='contact' placeholder=' Contact')
            #actErr.error
          button.btn.btn-primary.btn-block(type='submit')
            | Send Request
script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js')
script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js')
script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js')
script(src='/js/client.js')
