doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible' content='ie=edge')
  link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.6.3/css/all.css')
  link(rel='stylesheet' href='https://bootswatch.com/4/journal/bootstrap.min.css')
  title StayClean Driver&apos;s Regstration Form 
.container
  .row.mt-10
    .col-md-6.m-auto
      .card.card-body
        h1.text-center.mb-3
          i.fas.fa-user-plus
          |  Driver&apos;s Regstration Form
        form#form(action='/dr' onSubmit='return validate()' name='form' method='POST')
          .form-group
            label(for='name')  Name
            input#username.form-control(type='name' name='name' placeholder='Enter Name')
            #nameErr.error
          .form-group
            label(for='home_address') NIN
            input#nin.form-control(type='nin' name='nin' placeholder=' nin')
            #ninErr.error
          .form-group
            label(for='home_address') Home Address
            input#ha.form-control(type='homeaddress' name='home_address' placeholder=' home_address')
            #haErr.error
          .form-group
            label(for='text') Birth Date
            input#bd.form-control(type='date' name='birthdate' placeholder='Birthdate')
            #bdErr.error
          .form-group
            label(for='driving license Number') Driving License Number
            input#dln.form-control(type='text' name='driving_licence_no' placeholder=' driving_license')
            #dlnErr.error
          .form-group
            label(for='past_incidence') Past Incidence
            input#pi.form-control(type='past_incidence' name='past_incidence' placeholder=' past_incidence')
            #piErr.error
          .form-group
            label(for='gender')  Gender
            select#gender.form-control(name='gender')
              option(value=' Choose gender  ')   Gender  
              option(value='Registers urban farmers') Male
              option(value='Inspects the produce') Female
            #genderErr.error
          button.btn.btn-primary.btn-block(type='submit')
            | Register
script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js')
script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js')
script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js')
script(src='/js/driver.js')
